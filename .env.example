# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/giftpulse_monitor

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@giftpulse.com
SMTP_USE_TLS=true

# Application Configuration
LOG_LEVEL=INFO
POLL_INTERVAL_SECONDS=300
API_PORT=8000
API_HOST=0.0.0.0

# Security
API_KEY=your_secure_api_key_here_change_in_production
SECRET_KEY=your_secret_key_for_sessions_change_in_production

# Webhook Configuration
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_SECONDS=5

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
